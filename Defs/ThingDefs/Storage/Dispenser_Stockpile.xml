<?xml version="1.0" encoding="utf-8" ?>
<Buildings>


  <ThingDef Name="BuildingBase" Abstract="True">
    <category>Building</category>
    <thingClass>Building</thingClass>
    <soundImpactDefault>BulletImpactMetal</soundImpactDefault>
    <selectable>true</selectable>
    <drawerType>MapMeshAndRealTime</drawerType>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <repairEffect>Repair</repairEffect>
    <leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
    <filthLeaving>BuildingRubble</filthLeaving>
  </ThingDef>

  <!--============================== Storage ===========================-->

  <ThingDef ParentName="BuildingBase" Class="ExtendedStorageExtended.ESdef">
    <defName>Storage_Basket</defName>
    <label>Thing Dispenser</label>
    <thingClass>ExtendedStorageExtended.Building_ExtendedStorageExtended</thingClass>
    <graphicData>
      <texPath>Things/Building/Furniture/Dispenser</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawsize>2,1</drawsize>
    </graphicData>
    <maxStorage>150</maxStorage>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <castEdgeShadows>true</castEdgeShadows>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <WorkToMake>580</WorkToMake>
      <Flammability>1.0</Flammability>
      <Beauty>8</Beauty>
    </statBases>
    <description>Haulers carry stuff here for temporary storage.</description>
    <size>(2,1)</size>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
    </stuffCategories>
    <costStuffCount>15</costStuffCount>
    <killedLeavings>
      <ChunkSlagSteel>1</ChunkSlagSteel>
    </killedLeavings>
    <filthLeaving>BuildingRubble</filthLeaving>
    <building>
    </building>
    <inspectorTabs>
      <li>ITab_Storage</li>
    </inspectorTabs>
    <tickerType>Normal</tickerType>
    <designationCategory>Furniture</designationCategory>
    <staticSunShadowHeight>0.5</staticSunShadowHeight>
    <surfaceType>Item</surfaceType>
    <minifiedDef>MinifiedFurniture</minifiedDef>
    <tradeTags>
      <li>Furniture</li>
    </tradeTags>
  </ThingDef>

</Buildings>