<?xml version="1.0" encoding="utf-8" ?>
<Buildings>


  <ThingDef Name="BuildingBase" Abstract="True">
    <category>Building</category>
    <thingClass>Building</thingClass>
    <soundImpactDefault>BulletImpactMetal</soundImpactDefault>
    <selectable>true</selectable>
    <drawerType>MapMeshAndRealTime</drawerType>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <repairEffect>Repair</repairEffect>
    <leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
    <filthLeaving>BuildingRubble</filthLeaving>
  </ThingDef>

  <!--============================== Storage ===========================-->

  <ThingDef ParentName="BuildingBase" Class="ExtendedStorageExtended.ESdef">
    <defName>MTW_Dispenser_Storage_Bin</defName>
    <label>storage bin</label>
    <thingClass>ExtendedStorageExtended.Building_Dispenser</thingClass>
    <graphicData>
      <texPath>Things/Building/Furniture/Dispenser</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <maxStacks>1</maxStacks>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <castEdgeShadows>true</castEdgeShadows>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <WorkToMake>580</WorkToMake>
      <Flammability>1.0</Flammability>
      <Beauty>8</Beauty>
    </statBases>
    <description>A dispenser for temporarily storing resources. Stores a single stack. Requires an attached hopper.</description>
    <size>(1,1)</size>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
      <li>Stony</li>
    </stuffCategories>
    <costStuffCount>5</costStuffCount>
    <filthLeaving>BuildingRubble</filthLeaving>
    <building>
      <wantsHopperAdjacent>true</wantsHopperAdjacent>
    </building>
    <comps>
      <li Class="CommunityCoreLibrary.CompProperties_HopperUser">
        <compClass>CommunityCoreLibrary.CompHopperUser</compClass>
        <resources>
          <categories>
            <li>Resources</li>
          </categories>
        </resources>
      </li>
    </comps>
    <placeWorkers>
      <li>CommunityCoreLibrary.PlaceWorker_HopperMagnifier</li>
    </placeWorkers>
    <tickerType>Normal</tickerType>
    <designationCategory>Furniture</designationCategory>
    <staticSunShadowHeight>0.5</staticSunShadowHeight>
    <surfaceType>Item</surfaceType>
    <minifiedDef>MinifiedFurniture</minifiedDef>
    <tradeTags>
      <li>Furniture</li>
    </tradeTags>
  </ThingDef>

</Buildings>